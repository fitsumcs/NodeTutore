    {{> header}}
    <div class="container">
      <h1>Edit Note</h1>
      <form method="POST" action="/notes/{{note._id}}?_method=PUT">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Note Title" name="title" value="{{note.title}}" required>
  </div>
  
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" required>{{note.description}}</textarea>
  </div>
   <button type="submit" class="btn btn-primary">Edit Note</button>
</form>
    </div>
 
    {{> footer}}