    {{> header}}
    <div class="container">
      {{#each errors}}
      <div class="alert alert-danger">{{text}}</div> 
      {{else}}
      {{/each}}
      <h1>Add New Note</h1>
      <form method="POST" action="/notes">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Note Title" name="title" value="{{title}}">
  </div>
  
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" >{{description}}</textarea>
  </div>
   <button type="submit" class="btn btn-primary">Submit Note</button>
</form>
    </div>
 
    {{> footer}}