{
    "name": "node-demo",
    "version": "1.0.0",
    "description": "Node Tutorial ",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:coverage:watch": "jest --coverage --watch",
        "test:verbose": "jest --verbose",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "start": "node index.js",
        "dev": "nodemon index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fitsumcs/NodeTutore.git"
    },
    "author": "Fitsum Alemu",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fitsumcs/NodeTutore/issues"
    },
    "homepage": "https://github.com/fitsumcs/NodeTutore#readme",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cat-me": "^1.0.3",
        "chalk": "^4.1.2",
        "connect-flash": "^0.1.1",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "express-jwt": "^8.5.1",
        "express-session": "^1.18.2",
        "@faker-js/faker": "^9.4.1",
        "hbs": "^4.2.0",
        "is-image-url": "^1.1.8",
        "jsonwebtoken": "^9.0.2",
        "md5": "^2.3.0",
        "method-override": "^3.0.0",
        "mocha": "^11.7.1",
        "mongodb": "^6.5.0",
        "mongoose": "^8.16.4",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^7.0.5",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-local": "^1.0.0",
        "passport-local-mongoose": "^8.0.0",
        "superheroes": "^4.0.0",
        "supervillains": "^4.0.0",
        "underscore": "^1.13.7",
        "validator": "^13.15.15",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.1.9"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!**/jest.config.js",
            "!**/package.json",
            "!**/package-lock.json"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/?(*.)+(spec|test).js"
        ],
        "testEnvironment": "node"
    }
}
